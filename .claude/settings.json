{
  "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$CLAUDE_FILE_PATH\" | grep -qE '\\.(ts|tsx|js|jsx|json|css)$' && npx prettier --write \"$CLAUDE_FILE_PATH\" || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_FILE_PATH\" | grep -qE '\\.env($|\\.)' && echo \"$CLAUDE_FILE_PATH\" | grep -qv '\\.example$'; then echo 'BLOCK: .env files should not be edited by Claude â€” edit manually'; exit 1; else exit 0; fi"
          }
        ]
      }
    ]
  }
}
